<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        tools:context=".SuccessActivity">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:theme="@style/AppTheme.AppBarOverlay">

        <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="?actionBarSize"
                android:padding="@dimen/appbar_padding"
                android:text="@string/app_name"
                android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"/>

        <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>





    <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/mFabMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="6dp"
            android:padding="16dp"
            android:visibility="visible"
            ads:menu_colorNormal="@color/colorAccent"
            ads:menu_colorPressed="#3cb6e3"
            ads:menu_fab_label="hidden"
            ads:menu_icon="@drawable/ic_plus_white"
            ads:menu_labels_colorNormal="#00ffffff"
            ads:menu_labels_colorPressed="#00ffffff"
            ads:menu_labels_showShadow="false"
            fab:menu_backgroundColor="#aa1d1c1c">

        <com.github.clans.fab.FloatingActionButton
                android:id="@+id/mFabTraining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_training"
                ads:fab_colorNormal="#BBDEFB"
                ads:fab_colorPressed="#f9b84f"
                ads:fab_shadowColor="#00ffffff"
                fab:fab_label="Training"
                fab:fab_size="mini"
                fab:menu_labels_textSize="16sp" />

        <com.github.clans.fab.FloatingActionButton
                android:id="@+id/mFabSongs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_song"
                ads:fab_colorNormal="#BBDEFB"
                ads:fab_colorPressed="#f9b84f"
                ads:fab_shadowColor="#00ffffff"
                fab:fab_label="Songs"
                fab:fab_size="mini"
                fab:menu_labels_textSize="16sp" />

        <com.github.clans.fab.FloatingActionButton
                android:id="@+id/mFabSuperhero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_hero"
                ads:fab_colorNormal="#BBDEFB"
                ads:fab_colorPressed="#f9b84f"
                ads:fab_shadowColor="#00ffffff"
                fab:fab_label="Super Hero"
                fab:fab_size="mini"
                fab:menu_labels_textSize="16sp" />

        <com.github.clans.fab.FloatingActionButton
                android:id="@+id/mFabFoods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_food"
                ads:fab_colorNormal="#BBDEFB"
                ads:fab_colorPressed="#f9b84f"
                fab:fab_label="Foods"
                fab:fab_size="mini"
                fab:menu_labels_textSize="16sp" />

    </com.github.clans.fab.FloatingActionMenu>
</androidx.coordinatorlayout.widget.CoordinatorLayout>